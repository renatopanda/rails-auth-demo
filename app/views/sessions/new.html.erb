<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with scope: :session_form, url: login_path, local: true do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, id: :session_email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, id: :session_password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>
